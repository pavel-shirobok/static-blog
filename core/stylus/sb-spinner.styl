@import constants

sb-spinner
  display inline-block
  vertical-align middle
  width 1em
  height 1em
  position relative
  animation loaderIndicatorBaseAnimation 1s infinite

  .wrapper
    for nn in (0..indicatorPartsCount)

      .indicator-part:nth-child({nn})
        transform rotate(nn * indicatorPartAngle)
        position absolute
        top 0.5em
        left 0.5em

        &:after
          content ''
          display block
          animation loaderIndicatorPartsAnimation 1.5s ( nn + 1 ) * 0.1s infinite
          animation-timing-function linear
          border-radius 10px
          background #000000
          width 0.1em
          height 0.333em
          position: absolute;
          left 0.05em
          top 0.15em

@keyframes loaderIndicatorBaseAnimation
  0%
    transform  scale(0.5) rotate(0deg)
  50%
    transform scale(1) rotate(180deg)
  100%
    transform scale(0.5) rotate(360deg)

@keyframes loaderIndicatorPartsAnimation
  0%
    transform scaleY(0.1)
    opacity 0.5
  50%
    transform scaleY(1)
    opacity 1
  100%
    transform scaleY(0.1)
    opacity 0.5